<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".ShowPoem"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:id="@+id/rltv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_show_poem"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:clickable="false"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/rltv_toolbar"
        app:layout_anchorGravity="bottom"
        android:layoutDirection="ltr"
        android:clickable="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:clickable="false"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_play_showPoem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_play"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:layout_alignParentLeft="true"
                />

            <SeekBar
                android:id="@+id/seekbar_showPoem"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:progress="0"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/fab_play_showPoem"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/duration_showPoem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:clickable="false"
                android:layout_toRightOf="@+id/seekbar_showPoem"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"

                />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/trans_rectangle_back_blue"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textDirection="rtl"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trans_rectangle_back"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/trans_rectangle_poem_back"
                android:orientation="vertical"
                android:textAlignment="center">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layoutDirection="ltr">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr">

                        <ImageView
                            android:id="@+id/share_showPoem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/share"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.25"
                            />


                        <ImageView
                            android:id="@+id/like_showPoem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/heart"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.25"
                            />

                        <ImageView
                            android:id="@+id/ref_showPoem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/refresh"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.25"
                            />

                        <ImageView
                            android:id="@+id/download_showPoem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/download"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.25"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginTop="4dp">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_body"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textDirection="rtl"
                            android:textSize="16dp"
                            tools:text="alireza abbasian"
                            />



                    </ScrollView>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rltv_snack_showPoem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txt_snack_showPoem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>