<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUser"
    android:background="@drawable/background"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="enterAlways" />


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/rltv_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cici"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/emptyprofile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/cici"
                android:text="090394111111"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:rotation="270"
                android:src="@drawable/control" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv_friend_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv_prof"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="16dp"
            >


            <ImageView
                android:id="@+id/img_ac"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/account_group"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دعوت از دوستان"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/img_ac"
                android:layout_marginRight="8dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:rotation="270"
                android:src="@drawable/control"
                android:layout_marginLeft="5dp"/>


        </RelativeLayout>

        <View
            android:id="@+id/line_ac"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/rltv_friend_add"
            android:layout_marginRight="40dp"
            />

        <RelativeLayout
            android:id="@+id/rltv_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_ac"
            android:padding="@dimen/_8sdp">


            <ImageView
                android:id="@+id/img_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/update"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="به روز رسانی"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/img_up"
                android:layout_marginRight="8dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:rotation="270"
                android:src="@drawable/control"
                android:layout_marginLeft="5dp"/>


        </RelativeLayout>

        <View
            android:id="@+id/line_up"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/rltv_update"
            android:layout_marginRight="40dp"/>

        <RelativeLayout
            android:id="@+id/rltv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_up"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/img_about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/information"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درباره ما"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/img_about"
                android:layout_marginRight="8dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:rotation="270"
                android:src="@drawable/control"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/line_about"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_below="@+id/rltv_about"
            android:layout_marginRight="40dp"/>

        <RelativeLayout
            android:id="@+id/rltv_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_about"
            android:padding="@dimen/_8sdp"
            >


            <ImageView
                android:id="@+id/img_log"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خروج"
                android:textColor="#EEEEEE"
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/img_log"
                android:layout_marginRight="8dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:rotation="270"
                android:src="@drawable/control"
                android:layout_marginLeft="5dp"/>


        </RelativeLayout>



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>