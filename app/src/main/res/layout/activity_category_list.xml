<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category_list"
    android:background="@drawable/back">


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/trans_rectangle_back_blue"
        android:layout_marginTop="28dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/trans_rectangle_back"
            android:gravity="center"

            >
            <TextView
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:text="فهرست مطالب"
                android:id="@+id/list_cat_title"
                android:textColor="#fff"
                android:textSize="20dp"
                android:background="@drawable/frame"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:paddingTop="10dp"
                />



        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/emam8_logo"
        android:src="@drawable/logo"
        android:layout_marginTop="1dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/trans_rectangle_back_blue"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textDirection="rtl"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/trans_rectangle_back"
            >

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cat_recycler"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>