<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltvcat"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/list_back_poem"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_titlecat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#fff"
        android:textDirection="rtl"
        android:textSize="16dp" />
    <ImageView
        style="@style/frame_button"
        android:id="@+id/frame_section"
        android:src="@drawable/frame"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="عنوان بخش "
        android:id="@+id/txt_category_title"
        style="@style/text_button_frame" />


</RelativeLayout>