<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/trans_rectangle_back_blue"
            android:orientation="vertical"


            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/trans_rectangle_back"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"

            >

            <ImageView
                android:id="@+id/emam8_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />


            <TextView
                android:id="@+id/sher_sabk_txt"
                style="@style/text_button_frame_image"
                android:text="اشعار و سبک های مداحی"
                android:textSize="@dimen/_14sdp"/>


            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amoozesh_maddahi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="(بزودی)"
                    android:textColor="#ffF000"
                    android:textSize="@dimen/_10sdp"
                    android:textDirection="rtl"
                    android:layoutDirection="rtl"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/amoozesh_maddahi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="آموزش مداحی"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="left"/>


            </LinearLayout>

            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amoozesh_maddahi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="(بزودی)"
                    android:textColor="#ffF000"
                    android:textSize="@dimen/_10sdp"
                    android:textDirection="rtl"

                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/downliad_maddahi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=" دانلود مداحی"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amoozesh_maddahi3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="(بزودی)"
                    android:textColor="#ffF000"
                    android:textSize="@dimen/_10sdp"
                    android:textDirection="rtl"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/quran_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="دانلود قرآن "
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amoozesh_maddahi4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="(بزودی)"
                    android:textColor="#ffF000"
                    android:textSize="@dimen/_10sdp"
                    android:textDirection="rtl"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/lectures_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="سخنرانی های مذهبی "
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amoozesh_maddahi5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="(بزودی)"
                    android:textColor="#ffF000"
                    android:textSize="@dimen/_10sdp"
                    android:textDirection="rtl"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/news_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="اخبار و رویدادهای مذهبی"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                style="@style/text_button_frame_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contatc_us_btn"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ارتباط با ما"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/gray_back"
        app:itemIconTint="@color/nav_button"
        app:itemTextColor="@color/nav_button"
        app:menu="@menu/bottomnavigation"

        />

</RelativeLayout>