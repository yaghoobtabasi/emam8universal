<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"



        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/trans_rectangle_back_blue"
            android:layout_marginTop="18dp"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/trans_rectangle_back"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="10dp"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/emam8_logo"
                    android:src="@drawable/logo"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"
                    />



                <TextView
                    android:id="@+id/sher_sabk_txt"
                    style="@style/text_button_frame_image"
                    android:text="اشعار و سبک های مداحی" />



                <TextView
                    android:text="آموزش مداحی"
                    android:id="@+id/amoozesh_maddahi"
                    style="@style/text_button_frame_image" />

                <TextView
                    android:text=" دانلود مداحی"
                    android:id="@+id/downliad_maddahi"
                    style="@style/text_button_frame_image" />



                <TextView
                    android:text="دانلود قرآن "
                    android:id="@+id/quran_txt"
                    style="@style/text_button_frame_image" />

                <TextView
                    android:text="سخنرانی های مذهبی "
                    android:id="@+id/lectures_txt"
                    style="@style/text_button_frame_image" />

                <TextView
                    android:id="@+id/news_txt"
                    style="@style/text_button_frame_image"
                    android:text="اخبار و رویدادهای مذهبی" />

                <TextView
                    android:id="@+id/contatc_us_btn"

                    android:text="ارتباط با ما"
                    style="@style/text_button_frame_image" />






            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/gray_back"
        app:itemIconTint="@color/nav_button"
        app:itemTextColor="@color/nav_button"
        app:menu="@menu/bottomnavigation"

        />

</RelativeLayout>