<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <android.support.v7.widget.CardView
        android:id="@+id/cardView_poetPage"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layoutDirection="rtl"
        android:padding="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/like_content"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <ImageView
                android:id="@+id/play_paus_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/like_content"
                tools:src="@drawable/ic_play_arrow_black_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rltv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal"

            >



                <ImageView
                    android:id="@+id/img_poet"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chavoshi"
                    android:padding="6dp"
                     />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"

                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:padding="4dp"
                android:textDirection="rtl">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="40"
                    android:padding="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_poet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textSize="12sp"
                    tools:text="اشعار ولادت ها و اعیاد اسلامی ولادت حضرت زهرا (س)"

                    />


            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
